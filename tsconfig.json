{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "types/*": [
        "types/*"
      ],
      "api/*": [
        "api/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "mocks/*": [
        "mocks/*"
      ],
      "model/*": [
        "model/*"
      ],
      "view/*": [
        "view/*"
      ],
      "presenter/*": [
        "presenter/*"
      ],
    },
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
    ],
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    /* Bundler mode */
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    /* Strict Type Checking */
    "strict": true, // Строгий режим
    /* Additional Type Checking */
    "allowUnusedLabels": false, // Разрешить неиспользуемые лэйблы
    "allowUnreachableCode": false, // Разрешить неисползуемый код
    "noImplicitReturns": false, // Нет неявных возвратов return
    "noImplicitOverride": true, // Нет неявного переопределения в клаасах Override
    "noUnusedLocals": true, // Нет неиспользуемых локальные переменных
    "noUnusedParameters": true, // Нет неиспользуемых параметров в функциях
    "noUncheckedIndexedAccess": true, // Добавит undefined к любому неопределённому полю в типе.
    "noFallthroughCasesInSwitch": true, // Не проваливаться в Switch Case
    "noPropertyAccessFromIndexSignature": false, // Нет доступа через точечный синтаксис к неопределённым полям [key: string]: string
    "exactOptionalPropertyTypes": false, // Точные необязательные типы свойств ?:
  }
}